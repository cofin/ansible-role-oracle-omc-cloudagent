#!/bin/sh
### BEGIN INIT INFO
# Provides:          Oracle OMC CloudAgent
# Required-Start:    $local_fs $network $named $time $syslog
# Required-Stop:     $local_fs $network $named $time $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Description:       OMC CloudAgent Daemon
### END INIT INFO

SCRIPT={{omc_cloudagent_install_dir}}/agent_inst/bin/omcli

start() {
  if [ -f $SCRIPT ]; then
    RUNAS=$(stat -c '%U' $SCRIPT)
    echo 'Starting Oracle OMC CloudAgent' >&2
    su $RUNAS -c "$SCRIPT start agent"
    echo 'Oracle OMC CloudAgent started' >&2
  fi
}

stop() {
  if [ -f $SCRIPT ]; then
    RUNAS=$(stat -c '%U' $SCRIPT)
    echo 'Stopping Oracle OMC CloudAgent' >&2
    su $RUNAS -c "$SCRIPT stop agent"
    echo 'Oracle OMC CloudAgent stopped' >&2
  fi
}


case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  retart)
    stop
    echo "Preparing to restart."
    sleep 1
    start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
esac